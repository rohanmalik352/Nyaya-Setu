<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nyaya-Setu | Secure Upload</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/ethers/5.7.2/ethers.umd.min.js"></script>
  <style>
        :root {
      --primary-color: #1e3a8a; /* Deep Navy */
      --secondary-color: #64748b; /* Slate */
      --accent-color: #2563eb; /* Law Blue */
      --bg-color: #f8fafc;
      --card-bg: #ffffff;
      --text-main: #1e293b;
    }

    body {
      font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      background-color: var(--bg-color);
      color: var(--text-main);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
    }

    .container {
      background: var(--card-bg);
      padding: 2.5rem;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05), 0 5px 10px rgba(0, 0, 0, 0.02);
      width: 100%;
      max-width: 450px;
      border-top: 5px solid var(--primary-color);
    }

    h1 {
      margin-top: 0;
      font-size: 1.5rem;
      color: var(--primary-color);
      text-align: center;
      letter-spacing: -0.5px;
    }

    p.subtitle {
      text-align: center;
      color: var(--secondary-color);
      font-size: 0.9rem;
      margin-bottom: 2rem;
    }

    .form-group {
      margin-bottom: 1.25rem;
    }

    label {
      display: block;
      font-size: 0.85rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--secondary-color);
    }

    input[type="text"],
    input[type="file"] {
      width: 100%;
      padding: 0.75rem;
      border: 1.5px solid #e2e8f0;
      border-radius: 6px;
      box-sizing: border-box;
      transition: border-color 0.2s;
    }

    input:focus {
      outline: none;
      border-color: var(--accent-color);
      border: 2px solid rgba(37, 99, 235, 0.1);
    }

    /* Custom File Upload Styling */
    input[type="file"] {
      background: #f1f5f9;
      cursor: pointer;
    }

    button {
      width: 100%;
      background-color: var(--primary-color);
      color: white;
      padding: 0.8rem;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
      margin-top: 1rem;
    }

    button:hover {
      background-color: var(--accent-color);
    }

    .footer-links {
      margin-top: 1.5rem;
      text-align: center;
      border-top: 1px solid #edf2f7;
      padding-top: 1rem;
    }

    .footer-links a {
      color: var(--accent-color);
      text-decoration: none;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .footer-links a:hover {
      text-decoration: underline;
    }

    .wallet-btn {
      background: #ea580c; margin-bottom: 1rem;
    }

    .wallet-btn.connected {
      background: #16a34a; cursor: default;
    }
    
    #loader {
      display: none;
      color: #ea580c;
      text-align: center;
      font-weight: bold;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Nyaya-Setu</h1>
    <p class="subtitle">Immutable Evidence Locker</p>
    
    <button type="button" id="connectBtn" class="wallet-btn" onclick="connectWallet()">
      ü¶ä Connect MetaMask
    </button>

    <form id="uploadForm">
      <div class="form-group">
        <label>Case Reference Number</label>
        <input type="text" id="caseId" name="caseId" placeholder="e.g. CAS-2026-001" required>
      </div>

      <div class="form-group">
        <label>Investigating Officer ID</label>
        <input type="text" id="officerId" name="officerId" placeholder="Badge ID" required>
      </div>

      <div class="form-group">
        <label>Digital Evidence File</label>
        <input type="file" id="file" name="file" required>
      </div>

      <button type="submit" id="submitBtn" disabled>Step 1: Upload & Sign</button>
      <div id="loader">‚è≥ Uploading to IPFS & Waiting for MetaMask...</div>
    </form>

    <div class="footer-links">
      <a href="/evidence">‚Üê View Repository</a>
    </div>
  </div>

  <script>
    let signer;
    let contract;
    
    // --- COPY PASTE YOUR CONTRACT DETAILS HERE ---
    const CONTRACT_ADDRESS = "0x7C9069A677807e4D168e3a7c40bFbe790288Ad18"; 
    const ABI = [
		{
			"anonymous": false,
			"inputs": [
				{
					"indexed": true,
					"internalType": "string",
					"name": "caseId",
					"type": "string"
				},
				{
					"indexed": false,
					"internalType": "string",
					"name": "fileHash",
					"type": "string"
				},
				{
					"indexed": true,
					"internalType": "address",
					"name": "officer",
					"type": "address"
				}
			],
			"name": "EvidenceStored",
			"type": "event"
		},
		{
			"inputs": [
				{
					"internalType": "string",
					"name": "_caseId",
					"type": "string"
				},
				{
					"internalType": "string",
					"name": "_fileHash",
					"type": "string"
				}
			],
			"name": "storeEvidence",
			"outputs": [],
			"stateMutability": "nonpayable",
			"type": "function"
		},
		{
			"inputs": [
				{
					"internalType": "string",
					"name": "_caseId",
					"type": "string"
				}
			],
			"name": "verifyEvidence",
			"outputs": [
				{
					"internalType": "string",
					"name": "",
					"type": "string"
				}
			],
			"stateMutability": "view",
			"type": "function"
		}
	];

    // 1. Connect Wallet Function
    // 1. Connect Wallet Function (Smart Version)
    async function connectWallet() {
      if (!window.ethereum) return alert("Please install MetaMask!");
      
      const provider = new ethers.providers.Web3Provider(window.ethereum);
      
      // A. Force Network Switch to Sepolia
      const sepChainId = "0xaa36a7"; // Chain ID for Sepolia (11155111)
      
      try {
        await window.ethereum.request({
          method: 'wallet_switchEthereumChain',
          params: [{ chainId: sepChainId }],
        });
      } catch (switchError) {
        // This error code means Sepolia hasn't been added to their wallet yet
        if (switchError.code === 4902) {
           alert("Please add Sepolia Network to MetaMask!");
           return;
        }
        console.error("Network Switch Error", switchError);
      }

      // B. Connect Account
      await provider.send("eth_requestAccounts", []);
      signer = provider.getSigner();
      
      const address = await signer.getAddress();
      document.getElementById("connectBtn").innerText = "‚úÖ Connected: " + address.slice(0,6) + "...";
      document.getElementById("connectBtn").classList.add("connected");
      document.getElementById("submitBtn").disabled = false;
      
      // Init Contract
      contract = new ethers.Contract(CONTRACT_ADDRESS, ABI, signer);
    }

    // 2. The Main Upload Logic
    document.getElementById("uploadForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      
      const submitBtn = document.getElementById("submitBtn");
      const loader = document.getElementById("loader");
      submitBtn.style.display = 'none';
      loader.style.display = 'block';

      try {
        // A. Send File to Server (Pinata)
        const formData = new FormData(e.target);
        
        // Note: We changed the server route to return JSON, not redirect
        const response = await fetch('/evidence/upload-api', { 
            method: 'POST', 
            body: formData 
        });
        
        const data = await response.json();
        if(!data.success) throw new Error("Server Upload Failed");

        const { dbId, fileHash, caseId } = data;
        
        // B. Blockchain Magic (MetaMask Popup)
        loader.innerText = "ü¶ä Please Confirm in MetaMask...";
        
        // Call the Smart Contract
        const tx = await contract.storeEvidence(caseId, fileHash);
        
        loader.innerText = "‚è≥ Mining Transaction... Please Wait.";
        await tx.wait(); // Wait for block confirmation
        
        // C. Save the Tx Hash back to Server
        await fetch('/evidence/confirm-tx', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ dbId, txHash: tx.hash })
        });

        alert("üéâ Evidence Secured on Blockchain!\nTx: " + tx.hash);
        window.location.href = "/evidence"; // Redirect to dashboard

      } catch (err) {
        console.error(err);
        alert("Error: " + err.message);
        submitBtn.style.display = 'block';
        loader.style.display = 'none';
      }
    });
  </script>
</body>
</html>