  color: var(--bg); box-shadow: 0 4px 18px rgba(34,211,238,.25);
}
.ns-cta--primary:hover { transform: translateY(-2px); box-shadow: 0 8px 28px rgba(34,211,238,.4); }

/* Hero Stats */
.ns-hero-stats {
  display: flex; align-items: center;
  border: 1px solid rgba(0,210,230,.12); border-radius: .5rem;
  background: rgba(0,210,230,.03); overflow: hidden; margin-top: .5rem;
}
.ns-hero-stat { display: flex; flex-direction: column; align-items: center; padding: 1rem 2rem; gap: .2rem; }
.ns-hero-stat-div { width: 1px; height: 36px; background: rgba(0,210,230,.18); flex-shrink: 0; }
.ns-hero-stat-num {
