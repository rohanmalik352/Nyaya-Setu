}
.ns-hero-desc { font-size: 1.1rem; color: var(--txt2); line-height: 1.85; max-width: 580px; }
.ns-hero-desc em { color: var(--c4); font-style: normal; font-weight: 600; }

/* CTAs — both buttons identical style */
.ns-hero-ctas { display: flex; gap: 1rem; flex-wrap: wrap; justify-content: center; }
.ns-cta {
  display: inline-flex; align-items: center; gap: .5rem;
  padding: .75rem 2rem; border-radius: .375rem;
  font-family: var(--fd); font-weight: 700; font-size: .8rem;
  letter-spacing: .15em; text-transform: uppercase; text-decoration: none;
