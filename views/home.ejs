.ns-why { padding: 5rem 1.5rem; }
.ns-why-inner { max-width: 72rem; margin: 0 auto; }
.ns-why-header { text-align: center; margin-bottom: 3rem; display: flex; flex-direction: column; align-items: center; gap: .75rem; }
