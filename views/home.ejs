  position: relative; display: flex; align-items: center;
  justify-content: center; padding: 5rem 1.5rem 3rem;
  overflow: hidden; text-align: center;
}
.ns-hero-glow { position: absolute; border-radius: 50%; pointer-events: none; filter: blur(90px); }
.ns-hero-glow--c {
  width: 600px; height: 600px;
  background: radial-gradient(circle, rgba(0,210,230,.09) 0%, transparent 70%);
  top: -180px; left: 50%; transform: translateX(-55%);
}
.ns-hero-glow--g {
  width: 400px; height: 400px;
  background: radial-gradient(circle, rgba(50,210,130,.07) 0%, transparent 70%);
  bottom: -80px; right: 8%;
}
.ns-hero-inner {
  position: relative; z-index: 1; max-width: 760px;
  display: flex; flex-direction: column; align-items: center; gap: 1.5rem;
}
.ns-hero-badge {
  display: inline-flex; align-items: center; gap: .5rem;
  padding: .3rem 1rem; border: 1px solid rgba(0,210,230,.3);
  border-radius: 2rem; background: rgba(0,210,230,.07);
  font-family: var(--fd); font-size: .7rem; font-weight: 600;
  letter-spacing: .2em; text-transform: uppercase; color: var(--c4);
}
.ns-hero-badge-dot {
  width: 6px; height: 6px; border-radius: 50%;
  background: var(--c4); box-shadow: 0 0 6px var(--c4);
  animation: pulse-dot 2s ease-in-out infinite;
}
.ns-hero-title {
  font-family: var(--fd); font-weight: 900;
  font-size: clamp(3rem, 10vw, 6rem);
  letter-spacing: .08em; text-transform: uppercase; color: var(--txt); line-height: 1;
}
.ns-hero-title-sep { color: rgba(0,210,230,.4); margin: 0 .15em; }
.ns-hero-title-hl { color: var(--c4); text-shadow: 0 0 40px rgba(0,210,230,.45); }
.ns-hero-sub {
